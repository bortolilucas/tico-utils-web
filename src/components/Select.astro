---
import ErrorMessage from "@/components/ErrorMessage.astro";
import type { SelectOption } from "@/models/selectOptions";

type Props = {
  label: string;
  name: string;
  options: Array<SelectOption>;
  defaultValue?: string;
  error?: string;
};

const { label, name, options, defaultValue, error } = Astro.props;
---

<div>
  <label class="block text-sm font-medium text-gray-700 mb-2" for={name}>
    {label}
  </label>

  <select
    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500"
    id={name}
    name={name}
  >
    {
      options.map((option) => (
        <option value={option.value} selected={defaultValue === option.value}>
          {option.label}
        </option>
      ))
    }
  </select>

  {error && <ErrorMessage>{error}</ErrorMessage>}
</div>
